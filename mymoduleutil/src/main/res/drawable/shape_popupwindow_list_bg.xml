<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- This is the main color -->
    <item>
        <shape>
            <corners
                android:radius="10dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp"></corners>
            <!-- 边框颜色 -->
            <solid android:color="@color/login_button_background" />
        </shape>
    </item>
    <!-- 给View的上 左  右设置8dp的边框 -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape>
            <corners
                android:radius="10dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp"></corners>
            <!-- View填充颜色 -->
            <solid android:color="@color/white_normal" />
        </shape>
    </item>

</layer-list>